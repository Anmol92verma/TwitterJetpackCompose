<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Tweetify" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">#ff00ff</item>
        <item name="colorAccent">#ff00ff</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Tweetify.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Tweetify.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Tweetify.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>